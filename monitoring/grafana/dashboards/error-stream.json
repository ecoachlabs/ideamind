        {
          "format": "table",
          "group": [],
          "metricColumn": "none",
          "rawQuery": true,
          "rawSql": "SELECT \n  e.timestamp,\n  e.run_id,\n  e.phase,\n  e.error_type,\n  e.source,\n  e.message,\n  e.root_cause,\n  e.retry_count\nFROM (\n  SELECT \n    l.timestamp,\n    l.run_id,\n    l.metadata->>'phase' as phase,\n    l.metadata->>'error_type' as error_type,\n    l.metadata->>'source' as source,\n    l.data->>'message' as message,\n    l.metadata->>'root_cause' as root_cause,\n    COALESCE((l.metadata->>'retry_count')::int, 0) as retry_count\n  FROM ledger l\n  WHERE l.entry_type = 'task' \n    AND l.data->>'status' = 'failed'\n    AND $__timeFilter(l.timestamp)\n  UNION ALL\n  SELECT\n    created_at as timestamp,\n    run_id,\n    phase,\n    'gate_failure' as error_type,\n    'gate' as source,\n    array_to_string(decision_reasons, '; ') as message,\n    'gate' as root_cause,\n    0 as retry_count\n  FROM gate_evaluations\n  WHERE status = 'fail'\n    AND $__timeFilter(created_at)\n) e\nORDER BY e.timestamp DESC\nLIMIT 100",
          "refId": "A"
        }
      ],
      "title": "Error Stream (Real-Time)",
      "type": "table"
