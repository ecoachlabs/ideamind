{
  "dashboard": {
    "title": "IdeaMine System Overview",
    "tags": ["ideamine", "overview"],
    "timezone": "browser",
    "editable": true,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Active Runs",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(ideamine_runs_active)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Active Workers",
        "type": "stat",
        "gridPos": {
          "x": 6,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(ideamine_workers_active)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "title": "Tasks In Progress",
        "type": "stat",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(ideamine_tasks_in_progress)",
            "refId": "A"
          }
        ]
      },
      {
        "id": 4,
        "title": "Success Rate (24h)",
        "type": "gauge",
        "gridPos": {
          "x": 18,
          "y": 0,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(rate(ideamine_runs_completed_total{status=\"success\"}[24h])) / sum(rate(ideamine_runs_completed_total[24h])) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 70, "color": "yellow"},
                {"value": 90, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Phase Execution Timeline",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 4,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum by (phase) (rate(ideamine_phase_duration_seconds_count[5m]))",
            "refId": "A",
            "legendFormat": "{{phase}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth"
            },
            "unit": "ops"
          }
        }
      },
      {
        "id": 6,
        "title": "Budget Utilization",
        "type": "timeseries",
        "gridPos": {
          "x": 12,
          "y": 4,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "ideamine_budget_tokens_used / ideamine_budget_tokens_allocated * 100",
            "refId": "A",
            "legendFormat": "Tokens"
          },
          {
            "expr": "ideamine_budget_tools_minutes_used / ideamine_budget_tools_minutes_allocated * 100",
            "refId": "B",
            "legendFormat": "Tools"
          },
          {
            "expr": "ideamine_budget_wallclock_used / ideamine_budget_wallclock_allocated * 100",
            "refId": "C",
            "legendFormat": "Wallclock"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 7,
        "title": "Error Rate by Phase",
        "type": "bargauge",
        "gridPos": {
          "x": 0,
          "y": 12,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "sum by (phase) (rate(ideamine_phase_errors_total[5m]))",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.01, "color": "yellow"},
                {"value": 0.1, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Average Phase Duration",
        "type": "table",
        "gridPos": {
          "x": 12,
          "y": 12,
          "w": 12,
          "h": 6
        },
        "targets": [
          {
            "expr": "avg by (phase) (ideamine_phase_duration_seconds)",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "phase": "Phase",
                "Value": "Avg Duration (s)"
              }
            }
          }
        ]
      }
    ]
  }
}
