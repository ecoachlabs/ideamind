#!/usr/bin/env node
const { Command } = require('commander');
const program = new Command();

program
  .name('ideamine')
  .description('IdeaMine CLI')
  .version('1.0.0');

program
  .command('init')
  .description('Initialize a new IdeaMine project')
  .option('--preset <type>', 'Project preset (minimal, standard, fullstack, enterprise)')
  .action((options) => {
    console.log('Initializing IdeaMine project...');
    if (options.preset) {
      console.log(`Using preset: ${options.preset}`);
    }
  });

program
  .command('run')
  .description('Run an IdeaMine orchestration')
  .argument('<idea>', 'Idea description')
  .action((idea) => {
    console.log(`Running orchestration for: ${idea}`);
  });

program
  .command('status <runId>')
  .description('Check run status')
  .action((runId) => {
    console.log(`Checking status of run: ${runId}`);
  });

program.parse();
