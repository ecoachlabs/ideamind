{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@ideamine/agent-sdk": ["./packages/agent-sdk/src"],
      "@ideamine/tool-sdk": ["./packages/tool-sdk/src"],
      "@ideamine/event-schemas": ["./packages/event-schemas/src"],
      "@ideamine/artifact-schemas": ["./packages/artifact-schemas/src"],
      "@ideamine/orchestrator-core": ["./packages/orchestrator-core/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build"]
}
